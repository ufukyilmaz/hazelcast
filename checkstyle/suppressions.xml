<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC
        "-//Puppy Crawl//DTD Suppressions 1.1//EN"
        "http://www.puppycrawl.com/dtds/suppressions_1_1.dtd">

<suppressions>

    <!-- Suppress duplicate checking of copyright notice -->
    <suppress checks="StrictDuplicateCode" files="\.java" lines="1-15"/>

    <!-- Exclude all files from header check, so we can keep a common checkstyle.xml configuration -->
    <suppress checks="Header" files=""/>

    <!-- Javadoc suppressions -->
    <suppress checks="Javadoc(Package|Type|Method|Variable)" files="/impl/"/>
    <suppress checks="Javadoc(Package|Type|Method|Variable)" files="com/hazelcast/security/"/>
    <suppress checks="Javadoc(Type|Method|Variable)" files="com/hazelcast/map/"/>
    <suppress checks="JavadocType" files="com/hazelcast/memory"/>
    <suppress checks="Javadoc(Type|Method)" files="com/hazelcast/elasticmemory/"/>
    <suppress checks="Javadoc(Type|Method)" files="com/hazelcast/nio/"/>
    <suppress checks="Javadoc(Type|Method)" files="com/hazelcast/internal/serialization/"/>

    <!-- Hot restart module -->
    <suppress checks="VisibilityModifier|InnerAssignment" files="com/hazelcast/spi/hotrestart/impl" />

    <!-- temp suppression, there is another PR to clean this up -->
    <suppress checks="" files="com/hazelcast/util/concurrent/AbstractConcurrentArrayQueue" />

</suppressions>

<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>hazelcast-enterprise-root</artifactId>
        <groupId>com.hazelcast</groupId>
        <version>3.8.3-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <name>Hazelcast Enterprise(All)</name>
    <artifactId>hazelcast-enterprise-all</artifactId>
    <properties>
        <main.basedir>${project.parent.basedir}</main.basedir>
    </properties>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>${maven.shade.plugin.version}</version>
                <executions>
                    <execution>
                        <id>shade-artifacts</id>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <shadedArtifactId>hazelcast-enterprise-all</shadedArtifactId>
                            <minimizeJar>false</minimizeJar>
                            <artifactSet>
                                <includes>
                                    <include>com.hazelcast:hazelcast-all</include>
                                    <include>com.hazelcast:hazelcast-enterprise</include>
                                    <include>com.hazelcast:hazelcast-enterprise-client</include>
                                    <include>com.hazelcast.marketing:hazelcast-license-extractor</include>
                                </includes>
                            </artifactSet>
                            <transformers>
                                <transformer
                                        implementation="com.hazelcast.buildutils.HazelcastManifestTransformer">
                                    <mainClass>com.hazelcast.console.ConsoleApp</mainClass>
                                    <overrideInstructions>
                                        <Import-Package>
                                            org.hibernate.*;resolution:=optional,
                                            org.springframework.*;resolution:=optional,
                                            javax.servlet.*;resolution:=optional,
                                            javax.security.*;resolution:=optional,
                                            org.slf4j.*;resolution:=optional,
                                            org.apache.log4j.*;resolution:=optional,
                                            org.apache.logging.log4j;resolution:=optional,
                                            org.apache.logging.log4j.*;resolution:=optional,
                                            org.apache.commons.logging;resolution:=optional,
                                            javax.script.*;resolution:=optional,
                                            org.jclouds.*;resolution:=optional,
                                            com.google.*;resolution:=optional,
                                            sun.nio.ch;resolution:=optional,
                                            sun.misc;resolution:=optional,
                                            org.codehaus.groovy.jsr223;resolution:=optional,
                                            org.codehaus.groovy.runtime;resolution:=optional,
                                            org.springframework.beans;resolution:=optional,
                                            javax.swing.table;resolution:=optional,
                                            org.apache.http;resolution:=optional,
                                            org.apache.http.util;resolution:=optional,
                                            org.apache.http.impl.client;resolution:=optional,
                                            org.apache.http.client.methods;resolution:=optional,
                                            javax.swing.table;resolution:=optional,
                                            org.apache.http.util;resolution:=optional,
                                            net.spy.memcached.internal;resolution:=optional,
                                            org.ops4j.pax.exam;resolution:=optional,
                                            javax.swing.text;resolution:=optional,
                                            javax.swing.border;resolution:=optional,
                                            javax.swing.tree;resolution:=optional,
                                            javax.swing.event;resolution:=optional,
                                            org.reflections;resolution:=optional,
                                            org.reflections.util;resolution:=optional,
                                            org.reflections.scanners;resolution:=optional,
                                            groovy.util;resolution:=optional,
                                            org.codehaus.groovy.runtime.metaclass;resolution:=optional,
                                            net.spy.memcached;resolution:=optional,
                                            !org.powermock.api.mockito,
                                            !org.powermock.core.classloader.annotations,
                                            !org.mockito.asm.signature,
                                            !org.ops4j.pax.exam.junit,
                                            !org.openjdk.jmh.util,
                                            !org.openjdk.jmh.results,
                                            !org.openjdk.jmh.runner,
                                            !org.openjdk.jmh.infra,
                                            !org.openjdk.jmh.annotations,
                                            !org.openjdk.jmh.runner.options,
                                            !org.jsr107.tck.support,
                                            !org.jsr107.tck.processor,
                                            !org.jsr107.tck,
                                            !org.jsr107.tck.expiry,
                                            !org.jsr107.tck.management,
                                            !org.jsr107.tck.spi,
                                            !org.jsr107.tck.integration,
                                            !org.jsr107.tck.event,
                                            !org.eclipse.jetty.server,
                                            !org.eclipse.jetty.webapp,
                                            !org.eclipse.jetty.server.nio,
                                            !com.atomikos.icatch.jta,
                                            !com.atomikos.datasource.xa,
                                            !com.sun.jdmk.comm,
                                            !com.eclipsesource.json,
                                            !org.ops4j.pax.exam.options,
                                            !org.powermock.modules.junit4,
                                            !org.apache.tools.ant,
                                            !org.apache.tools.ant.types,
                                            !org.ops4j.pax.exam.util,
                                            !org.ops4j.pax.exam.spi.reactors,
                                        </Import-Package>
                                    </overrideInstructions>

                                    <!-- fix OSGi metadata -->
                                    <manifestEntries>
                                        <CacheEntryImpl>com.hazelcast.cache.impl.CacheEntry</CacheEntryImpl>
                                        <CacheImpl>com.hazelcast.cache.ICache</CacheImpl>
                                        <CacheManagerImpl>com.hazelcast.cache.HazelcastCacheManager</CacheManagerImpl>
                                        <Bundle-License>http://www.hazelcast.com/licenses/LICENSE.txt</Bundle-License>
                                        <Bundle-SymbolicName>com.hazelcast.enterprise-all</Bundle-SymbolicName>
                                        <Specification-Title>Hazelcast Enterprise(All)</Specification-Title>
                                        <Implementation-Vendor-Id>com.hazelcast</Implementation-Vendor-Id>
                                        <Bundle-DocURL>http://www.hazelcast.com/</Bundle-DocURL>
                                        <Bundle-Name>Hazelcast Enterprise(All)</Bundle-Name>
                                        <Bundle-Activator>com.hazelcast.osgi.impl.Activator</Bundle-Activator>
                                        <Implementation-Title>Hazelcast Enterprise(All)</Implementation-Title>
                                        <Implementation-Version>${project.version}</Implementation-Version>
                                        <Specification-Vendor>Hazelcast, Inc.</Specification-Vendor>
                                        <Bundle-ManifestVersion>2</Bundle-ManifestVersion>
                                        <Bundle-Vendor>Hazelcast, Inc.</Bundle-Vendor>
                                        <Implementation-Vendor>Hazelcast, Inc.</Implementation-Vendor>
                                        <Bundle-Version>${parsedVersion.osgiVersion}</Bundle-Version>
                                        <Specification-Version>${project.version}</Specification-Version>
                                    </manifestEntries>
                                </transformer>
                                <transformer
                                        implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer"/>
                            </transformers>
                            <filters>
                                <filter>
                                    <artifact>*:*</artifact>
                                    <excludes>
                                        <exclude>META-INF/*.SF</exclude>
                                        <exclude>META-INF/*.DSA</exclude>
                                        <exclude>META-INF/*.RSA</exclude>
                                    </excludes>
                                </filter>
                            </filters>
                        </configuration>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>com.hazelcast</groupId>
                        <artifactId>hazelcast-build-utils</artifactId>
                        <version>[3.7,)</version>
                    </dependency>
                </dependencies>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>1.7</version>
                <executions>
                    <execution>
                        <id>parse-version</id>
                        <goals>
                            <goal>parse-version</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>


    <dependencies>
        <dependency>
            <groupId>com.hazelcast</groupId>
            <artifactId>hazelcast-all</artifactId>
            <version>${project.version}</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.hazelcast</groupId>
            <artifactId>hazelcast-enterprise</artifactId>
            <version>${project.version}</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.hazelcast</groupId>
            <artifactId>hazelcast-enterprise-client</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.hazelcast</groupId>
            <artifactId>hazelcast-enterprise</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
            <classifier>tests</classifier>
        </dependency>
    </dependencies>
</project>

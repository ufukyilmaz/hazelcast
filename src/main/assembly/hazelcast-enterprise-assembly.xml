<assembly>
    <id>Hazelcast Enterprise Assembly</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>hazelcast-enterprise-sessions/tomcat6/target/</directory>
            <outputDirectory>/lib/</outputDirectory>
            <includes>
                <include>hazelcast-enterprise-tomcat6-${project.version}.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>hazelcast-enterprise-sessions/tomcat7/target/</directory>
            <outputDirectory>/lib/</outputDirectory>
            <includes>
                <include>hazelcast-enterprise-tomcat7-${project.version}.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>hazelcast-enterprise/target/</directory>
            <outputDirectory>/lib/</outputDirectory>
            <includes>
                <include>hazelcast-enterprise-${project.version}.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>hazelcast-enterprise-all/target/</directory>
            <outputDirectory>/lib/</outputDirectory>
            <includes>
                <include>hazelcast-enterprise-all-${project.version}.jar</include>
            </includes>
        </fileSet>
            <fileSet>
                <directory>${hazelcast.root}/hazelcast-ra/hazelcast-jca/target</directory>
                <outputDirectory>/lib/</outputDirectory>
                <includes>
                    <include>hazelcast-jca-${project.version}.jar</include>
                </includes>
            </fileSet>
            <fileSet>
                <directory>${hazelcast.root}/hazelcast-ra/hazelcast-jca-rar/target</directory>
                <outputDirectory>/lib/</outputDirectory>
                <includes>
                    <include>hazelcast-jca-rar-${project.version}.rar</include>
                </includes>
            </fileSet>
            <fileSet>
                <directory>${hazelcast.root}/hazelcast-wm/target/</directory>
                <outputDirectory>/lib/</outputDirectory>
                <includes>
                    <include>hazelcast-wm-${project.version}.jar</include>
                </includes>
            </fileSet>
            <fileSet>
                <directory>${hazelcast.root}/hazelcast-hibernate/hazelcast-hibernate3/target</directory>
                <outputDirectory>/lib/</outputDirectory>
                <includes>
                    <include>hazelcast-hibernate3-${project.version}.jar</include>
                </includes>
            </fileSet>
            <fileSet>
                <directory>${hazelcast.root}/hazelcast-hibernate/hazelcast-hibernate4/target</directory>
                <outputDirectory>/lib/</outputDirectory>
                <includes>
                    <include>hazelcast-hibernate4-${project.version}.jar</include>
                </includes>
            </fileSet>
            <fileSet>
                <directory>${hazelcast.root}/hazelcast-spring/target</directory>
                <outputDirectory>/lib/</outputDirectory>
                <includes>
                    <include>hazelcast-spring-${project.version}.jar</include>
                </includes>
            </fileSet>
            <fileSet>
                <directory>${hazelcast.root}/hazelcast-cloud/target</directory>
                <outputDirectory>/lib/</outputDirectory>
                <includes>
                    <include>hazelcast-cloud-${project.version}.jar</include>
                </includes>
            </fileSet>

            <fileSet>
                <directory>${hazelcast.root}/hazelcast-client/target</directory>
                <outputDirectory>/lib/</outputDirectory>
                <includes>
                    <include>hazelcast-client-${project.version}.jar</include>
                </includes>
            </fileSet>
            <fileSet>
                <directory>${hazelcast.root}/javadoc</directory>
                <outputDirectory>docs/javadoc</outputDirectory>
                <excludes>
                    <exclude>**/.svn/**</exclude>
                </excludes>
            </fileSet>
            <fileSet>
                <directory>${hazelcast.root}/hazelcast-documentation/target/</directory>
                <outputDirectory>docs/manual</outputDirectory>
                <includes>
                    <include>pdf/hazelcast-documentation-${project.version}.pdf</include>
                    <include>html/**</include>
                    <include>html-single/**</include>
                </includes>
            </fileSet>
            <fileSet>
                <directory>src/main/resources/</directory>
                <outputDirectory>/license/</outputDirectory>
                <includes>
                    <include>*license.txt</include>
                </includes>
            </fileSet>
            <fileSet>
                <directory>${hazelcast.root}/hazelcast/target/classes/</directory>
                <outputDirectory>/bin/</outputDirectory>
                <fileMode>0755</fileMode>
                <includes>
                    <include>*.sh</include>
                </includes>
            </fileSet>
            <fileSet>
                <directory>${hazelcast.root}/hazelcast/target/classes/</directory>
                <outputDirectory>/bin/</outputDirectory>
                <includes>
                    <include>*.bat</include>
                    <include>keystore</include>
                </includes>
            </fileSet>
            <fileSet>
                <directory>${hazelcast.root}/hazelcast/target/</directory>
                <outputDirectory>/bin/</outputDirectory>
                <includes>
                    <include>hazelcast.xml</include>
                </includes>
            </fileSet>
            <fileSet>
                <directory>${hazelcast.root}/hazelcast/src/main/resources/</directory>
                <outputDirectory>/bin/</outputDirectory>
                <includes>
                    <include>keystore</include>
                </includes>
            </fileSet>
        </fileSets>
</assembly>
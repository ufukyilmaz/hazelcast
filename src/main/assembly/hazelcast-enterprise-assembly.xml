<assembly>
    <id>Hazelcast Enterprise Assembly</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>hazelcast-enterprise/target/</directory>
            <outputDirectory>/lib/</outputDirectory>
            <includes>
                <include>hazelcast-enterprise-${project.version}.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>hazelcast-enterprise-all/target/</directory>
            <outputDirectory>/lib/</outputDirectory>
            <includes>
                <include>hazelcast-enterprise-all-${project.version}.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${hazelcast.root}/hazelcast-ra/hazelcast-jca/target</directory>
            <outputDirectory>/lib/</outputDirectory>
            <includes>
                <include>hazelcast-jca-${project.version}.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${hazelcast.root}/hazelcast-ra/hazelcast-jca-rar/target</directory>
            <outputDirectory>/lib/</outputDirectory>
            <includes>
                <include>hazelcast-jca-rar-${project.version}.rar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${hazelcast.root}/hazelcast-wm/target/</directory>
            <outputDirectory>/lib/</outputDirectory>
            <includes>
                <include>hazelcast-wm-${project.version}.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${hazelcast.root}/hazelcast-hibernate/hazelcast-hibernate3/target</directory>
            <outputDirectory>/lib/</outputDirectory>
            <includes>
                <include>hazelcast-hibernate3-${project.version}.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${hazelcast.root}/hazelcast-hibernate/hazelcast-hibernate4/target</directory>
            <outputDirectory>/lib/</outputDirectory>
            <includes>
                <include>hazelcast-hibernate4-${project.version}.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${hazelcast.root}/hazelcast-spring/target</directory>
            <outputDirectory>/lib/</outputDirectory>
            <includes>
                <include>hazelcast-spring-${project.version}.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${hazelcast.root}/hazelcast-sql/target</directory>
            <outputDirectory>/lib/</outputDirectory>
            <includes>
                <include>hazelcast-sql-${project.version}.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${hazelcast.root}/hazelcast-cloud/target</directory>
            <outputDirectory>/lib/</outputDirectory>
            <includes>
                <include>hazelcast-cloud-${project.version}.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${hazelcast.root}/hazelcast-jclouds/target</directory>
            <outputDirectory>/lib/</outputDirectory>
            <includes>
                <include>hazelcast-jclouds-${project.version}.jar</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${hazelcast.root}/javadoc</directory>
            <outputDirectory>docs/javadoc</outputDirectory>
            <excludes>
                <exclude>**/.svn/**</exclude>
            </excludes>
        </fileSet>

        <fileSet>
            <directory>${hazelcast.root}/hazelcast-documentation/build/asciidoc/pdf</directory>
            <outputDirectory>docs/manual/pdf</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${hazelcast.root}/hazelcast-documentation/build/asciidoc/html5</directory>
            <outputDirectory>docs/manual/html-single</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>src/main/resources/</directory>
            <outputDirectory>/license/</outputDirectory>
            <includes>
                <include>*license.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${hazelcast.root}/hazelcast/target/</directory>
            <outputDirectory>/bin/</outputDirectory>
            <includes>
                <include>hazelcast.xml</include>
                <include>hazelcast-full-example.xml</include>
                <include>hazelcast-full-example.yaml</include>
                <include>hazelcast-client-full-example.xml</include>
                <include>hazelcast-client-full-example.yaml</include>
                <include>hazelcast-client-failover-full-example.xml</include>
                <include>hazelcast-client-failover-full-example.yaml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${csharp.dir}/Html</directory>
            <outputDirectory>/clients/dotnet-client/docs/Html/</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${csharp.dir}</directory>
            <outputDirectory>/clients/dotnet-client/lib/</outputDirectory>
            <includes>
                <include>*.dll</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${cpp.dir}</directory>
            <outputDirectory>/clients/cpp-client/docs/</outputDirectory>
            <includes>
                <include>html/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${cpp.dir}</directory>
            <outputDirectory>/clients/cpp-client/</outputDirectory>
            <includes>
                <include>Linux_32/**</include>
                <include>Linux_64/**</include>
                <include>Windows_32/**</include>
                <include>Windows_64/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${code-samples.dir}</directory>
            <outputDirectory>/code-samples/</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
            <excludes>
                <exclude>**/bin/**</exclude>
                <exclude>**/target/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${script.dir}</directory>
            <outputDirectory>/demo/</outputDirectory>
            <fileMode>0755</fileMode>
            <includes>
                <include>clientConsole.**</include>
                <include>console.**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${script.dir}</directory>
            <outputDirectory>/bin/</outputDirectory>
            <fileMode>0755</fileMode>
            <includes>
                <include>start.**</include>
                <include>stop-all.**</include>
                <include>cluster.**</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
